---
import Icon from '../components/Icon'

const icons = [
 'entypo-social:github-with-circle',
 'entypo-social:linkedin-with-circle',
 'entypo-social:twitter-with-circle',
]
const menu = ['About', 'Projects', 'Contact', 'Blog']
---

<html lang='en'>
 <head>
  <meta charset='utf-8' />
  <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
  <meta name='viewport' content='width=device-width' />
  <meta name='generator' content={Astro.generator} />
  <title>Astro</title>
 </head>
 <body class='bg-black text-white'>
  <div class='relative grid grid-cols-1 p-5 xl:grid-cols-[150px_1fr] xl:p-0'>
   <aside
    class='hidden xl:flex flex-col justify-between items-center py-10 sticky top-0 h-screen'
   >
    <Icon
     client:idle
     height={50}
     icon='radix-icons:component-1'
     className='w-10 text-gr'
    />
    <div class='flex flex-col items-center'>
     {
      icons.map((icon) => (
       <Icon
        client:idle
        height={50}
        icon={icon}
        className='w-24 my-5 hover:text-gr hover:cursor-pointer'
       />
      ))
     }
    </div>
   </aside>
   <div>
    <nav
     class='flex xl:justify-end md:justify-between items-end xl:pt-24 xl:pr-24'
    >
     <Icon
      client:idle
      icon='radix-icons:component-1'
      height={50}
      className='hidden sm:block text-gr w-10 h-10 xl:hidden'
     />
     <ol class='flex w-full justify-around sm:justify-end'>
      {
       menu.map((item, index) => {
        return (
         <li class='text-white mx-0 sm:mx-5'>
          <a href={`#${item}`}>
           <span class='hidden sm:inline text-gr mr-1'>{index + 1}.</span>
           <span class='text-gr sm:hidden w-3 h-3 bg-gr' />
           {item}
          </a>
         </li>
        )
       })
      }
     </ol>
    </nav>

    <main class='grid grid-cols-1 gap-5 h-full md:p-10 xl:px-24'>
     <slot />
    </main>
   </div>
  </div>
 </body>
</html>
